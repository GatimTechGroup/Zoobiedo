<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="150dp"
    >
 <ImageView
    android:layout_width="80dp"
    android:layout_height="80dp"
     android:src="@drawable/organisericon"
     android:id="@+id/icon"
     android:layout_centerVertical="true"
     android:layout_alignParentLeft="true"
     android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold"
        android:text="Name"
        android:layout_margin="5dp"
        android:id="@+id/name"
        android:layout_alignTop="@+id/icon"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Area"
        android:layout_margin="5dp"
        android:id="@+id/area"
        android:layout_below="@+id/name"
        android:layout_toRightOf="@+id/icon"
        android:layout_toEndOf="@+id/icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="4.0"
        android:id="@+id/rating"
        android:layout_alignTop="@+id/star"
        android:layout_alignLeft="@+id/area"
        android:layout_alignStart="@+id/area" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/star"
        android:layout_margin="5dp"
        android:src="@drawable/selectedstar"
        android:layout_below="@+id/area"
        android:layout_toRightOf="@+id/rating"
        android:layout_toEndOf="@+id/rating" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:layout_margin="5dp"
        android:id="@+id/member"
        android:layout_alignTop="@+id/rating"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/membertick"
        android:layout_margin="5dp"
        android:src="@drawable/greentick"
        android:layout_alignBottom="@+id/member"
        android:layout_toLeftOf="@+id/member"
        android:layout_toStartOf="@+id/member" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"/>
</RelativeLayout>